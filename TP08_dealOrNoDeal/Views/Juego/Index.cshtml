@{
    ViewData["Title"] = "Juego";
}

<div class="row justify-content-center">
    <h2 class="display-4 texto-deal text-center">ELEGI TU MALETIN</h2>
</div>
<div class="row">
    <div class="col-md-8 col-12  order-lg-2 mb-4">
        <div class="text-center">
            @for (int i = 0; i < ViewBag.cantMaletines; i++)
            {
                <a href='@Url.Action("IniciarJuego","Juego",new{elegido=(i+1)})'><img class="maletinWidth golden-glow-pick"
                    src=@("../img/maletin/" + (i+1).ToString() + ".png")>
                    </a>
            }
        </div>
    </div>
    <div class="col-md-2 col-6 order-lg-1 ">
        @for (int i = 0; i < ViewBag.nombreCriptos.Length / 2; i++)
        {

            var imageName = ViewBag.nombreCriptos[i].Replace(" ", "_");
            <div class="row justify-content-center">
                <img class="py-1 cartelWidth" src=@("../img/carteles/" + imageName + ".png")>
            </div>
        }
    </div>
    <div class="col-md-2 col-6 order-lg-3">

        @for (int i = ViewBag.nombreCriptos.Length / 2; i < ViewBag.nombreCriptos.Length; i++)
        {
            var imageName = ViewBag.nombreCriptos[i].Replace(" ", "_");
            <div class="row justify-content-center">
                <img class="py-1 cartelWidth" src=@("../img/carteles/" + imageName + ".png")>
            </div>
        }
    </div>
</div>
