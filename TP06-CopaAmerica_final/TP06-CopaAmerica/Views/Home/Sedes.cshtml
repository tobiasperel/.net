@{
  ViewData["Title"] = "Sedes";
}

<div class="container pb-4">
  <h1>@ViewData["Title"]</h1>
  <div class="card-columns">

    @for(int i = 0; i < ViewBag.Nombre.Length; i++){
    <div class="card bg-light text-dark">
      <img class="card-img-top" src=@("../img/estadios/" + ViewBag.SedesPic[i] + ".jpg") alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title" style="text-decoration: underline;">@ViewBag.Nombre[i]</h5>
        <p class="card-text text-justify">@ViewBag.SedesDesc[i]</p>
      </div>
    </div>
}
    

  </div>
</div>