@{
    ViewData["Title"] = "verEquipos";
}

<div class="container py-3">
    <div class="row justify-content-center">
        @for(int i = 0; i < ViewBag.Equipos.Length; i++){
            <div class="col-md-4 my-3">
                <div class="card card-verequipos" style="width: 18rem;">
                    <img class="card-img-top" src=@("../img/flag/" + ViewBag.Equipos[i] + ".png") alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.Equipos[i]</h5>
                        <p class="card-text" id="gris"><u>Futbolista Reconocido</u> <br> @ViewBag.Frases[i]</p>
                        <a class="btn btn-primary" href='@Url.Action("VerJugadoresEquipo","Equipos", new {Equipo=@ViewBag.Equipos[i]})'>Ver Jugadores</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
