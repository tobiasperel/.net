<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TP06-CopaAmerica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-image: url(../img/bg.png);">
            <div class="container fuente">
                <a class="link-nav mr-5" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png"
                        width="130%" /></a>
                <button class="navbar-toggler custom-toggler navbar-light" type="button" data-toggle="collapse"
                    data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="fas fa-hamburger" style="color:#000; font-size:28px;"></i>
                    </span>

                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="borderless">
                        <li class="nav-item ml-2 mr-2">
                            <a class="nav-link text-white fuente" asp-area="" asp-controller="Home"
                                asp-action="Index"><span class="nav-color">Home</span></a>
                        </li>
                        <li class="nav-item ml-2 mr-2">
                            <a class="nav-link text-white fuente" asp-area="" asp-controller="Home"
                                asp-action="Sedes"><span class="nav-color">Sedes</span></a>
                        </li>
                        <li class="nav-item ml-2 mr-2">
                            <a class="nav-link text-white fuente" asp-area="" asp-controller="Home"
                                asp-action="UltimosCampeones"><span class="nav-color">Últimos Campeones</span></a>
                        </li>
                        <li class="nav-item ml-2 mr-2">
                            <a class="nav-link text-white fuente" asp-area="" asp-controller="Equipos"
                                asp-action="VerEquipos"><span class="nav-color">Equipos</span></a>
                        </li>
                        <li class="nav-item ml-2 mr-2">
                            <a class="nav-link text-white fuente" asp-area="" asp-controller="Home"
                                asp-action="MejoresMomentos"><span class="nav-color">Mejores Momentos</span></a>
                        </li>
                        @* <li class="nav-item ml-2 mr-2">
                            <a class="nav-link fuente gris" asp-area="" asp-controller="Home"
                                asp-action="tabla2">tabla2Galo  </a>
                        </li> *@
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()

    <footer class="border-top footer text-muted" style="background-image: url(../img/bg.png);">
        <div class="container">
            <p class="text-center">
                &copy; Nicolás Fishman, Sebastián Biorci, Tobías Perel - <a asp-area="" asp-controller="Home"
                    asp-action="Index">Home</a>
            </p>
            
            

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
